<% content_for :body_content_testimonial do %>
	<%= render :partial => "/shared/content_upper" %>
	<%= render :partial => 'shared/content_testimonial',
				:locals => { :testimonials => ["Our Services - the values we bring to you"] } %>
				
<% end %>

<% content_for :body_content do %>
	<div id="content_lower" class="container">
		<% @services.each do |service| %>
			<div class="content span-24 last">	
				<div id="accordion">

					<h2><a href="#" name="<%= service.friendly_id %>"><%= service.title %></a></h2>
					<div class="span-24 last">
						<div class="span-4">
							<img class="content-left" src="<%= service.icon.url %>" width="150">
						</div>
						<div class="span-19 last" style="font-size:14px;">
							<%= raw service.description %>
						</div>
					</div>
					<!-- ========================= -->


				</div>			</div>
		<% end %>
	</div>


