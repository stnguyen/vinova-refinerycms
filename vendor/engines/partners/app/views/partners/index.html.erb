<% content_for :body_content_upper do %>
	<%= render :partial => "/shared/content_upper" %>
	<%= render :partial => 'shared/content_testimonial',
				:locals => { :testimonials => ["<h1>Our Partners</h1>"] } %>
				
<% end %>

<% content_for :body_content do %>
	<div id="content_lower" class="container">
		<div class="content span-24 last">	
			<% @partners.each do |partner| %>
				<% next unless partner.show %>
				
				<div class="span-10">
					<% if partner.url %><a href="<%= partner.url %>" target="_blank"><% end %>
						<img width="300" class="content-left" src="<%= partner.icon.url %>" title="<%= partner.name %>" alt="<%= partner.name %>">
					<% if partner.url %></a><% end %>
				</div>
				<div class="span-14 last">
					<h2>
						<% if partner.url %>
							<a href="<%= partner.url %>" target="_blank" title="<%= partner.name %>">
						<% end %>
							<%= partner.name %>
						<% if partner.url %></a><% end %>
					</h2>

					<%= raw partner.description %>
				</div>
				<hr class="space"><hr class="space">
				
				<!-- ============================ -->
			<% end %>
		</div>
	</div>
<% end %>

<%= render :partial => "/shared/content_page" %>
