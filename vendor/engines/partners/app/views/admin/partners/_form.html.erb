<% form_for [:admin, @partner] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
    :object => @partner,
    :include_object_name => true
  } %>
  
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :url -%>
    <%= f.text_field :url, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :icon -%>
    <%= render :partial => "/shared/admin/image_picker", :locals => {
      :f => f,
      :field => :icon_id,
      :image => @partner.icon,
      :toggle_image_display => false
    } %>
  </div>

  <div class="field">
		<%= f.label :show -%>
    <%= f.check_box :show, :class => 'larger'-%>show me on the portfolio page
  </div>

  <div class='field'>
    <%= f.label :description -%>
    <%= f.text_area :description, :rows => 20, :class => 'wymeditor widest' -%>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('admin.partners.partner.delete'),
                :delete_confirmation => t('shared.admin.delete.message', :title => @partner.name)
              } %>
<% end -%>
